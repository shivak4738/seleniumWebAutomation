<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>selenium.web</groupId>
  <artifactId>SeleniumWeb</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
  <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.2.5.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
			<plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven-resources-plugin.version}</version>
                <executions>
                    <execution>
                        <id>test-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.testOutputDirectory}</outputDirectory>
                            <encoding>${project.build.sourceEncoding}</encoding>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/src/test/resources</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-reports</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/test-output</outputDirectory>
                            <encoding>${project.build.sourceEncoding}</encoding>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}</directory>
                                    <includes>
                                       <include>*.xlsx</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
	<properties>
        <java.version>1.8</java.version>
        <maven-resources-plugin.version>2.6</maven-resources-plugin.version>
        <maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
        <maven.surefire.version>2.17</maven.surefire.version>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>        
        <spring.framework.version>6.0.0</spring.framework.version>
        <testng.version>6.9.6</testng.version>
        <groovy.version>2.4.5</groovy.version>
        <postgres.jdbc.driver.version>9.4.1212</postgres.jdbc.driver.version>
        <HikariCP.version>2.2.5</HikariCP.version>        
        <rest-assured.version>2.4.0</rest-assured.version>
        <jackson.version>2.6.3</jackson.version>
        <poi-ooxml.version>3.15</poi-ooxml.version>
        <slf4j.version>1.7.7</slf4j.version>
        <selenium.version>3.141.59</selenium.version>
        <amazonaws.version>1.11.572</amazonaws.version>
        
        <!-- default properties -->
        <env>default</env>
        <target>qa</target>
    </properties>
